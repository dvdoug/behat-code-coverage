{
    "name": "dvdoug/behat-code-coverage",
    "description": "Generate Code Coverage reports for Behat tests",
    "type": "library",
    "homepage": "https://behat.cc",
    "keywords": ["behat", "code", "coverage", "report", "test", "tests", "code-coverage", "reports", "clover", "cobertura", "scenario", "bdd"],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Doug Wright",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "composer-runtime-api": "^2.0",
        "behat/behat": "^3.15",
        "composer/semver": "^3.0",
        "phpunit/php-code-coverage": "^12.3",
        "symfony/config": "^5.4.45||^6.4.24||^7.3",
        "symfony/console": "^5.4.45||^6.4.24||^7.3",
        "symfony/dependency-injection": "^5.4.45||^6.4.24||^7.3",
        "symfony/event-dispatcher": "^5.4.45||^6.4.24||^7.0.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88.2",
        "phpunit/phpunit": "^10.5.27||^11.4.3||^12.0",
        "symfony/filesystem": "^5.4.45||^6.4.24||^7.3"
    },
    "suggest": {
        "ext-xdebug": "Xdebug allows you to collect line, branch and path coverage",
        "ext-pcov": "PCOV allows you to collect line coverage only, but is faster than Xdebug"
    },
    "autoload": {
        "psr-4": {
            "DVDoug\\Behat\\CodeCoverage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DVDoug\\Behat\\CodeCoverage\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "phpunit/php-code-coverage": "source",
            "*": "dist"
        },
        "sort-packages": true,
        "bin-compat" : "full",
        "optimize-autoloader": true
    }
}
